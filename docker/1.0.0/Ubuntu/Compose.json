{
  "software": [
    {
      "name": "Docker Compose",
      "version": "1.25.4",
      "installationSteps": {
        "Ubuntu": [
          {
            "type": "skipCondition",
            "value": "docker-compose --version"
          },
          {
            "type": "command",
            "value": "apt update -y"
          },
          {
            "type": "command",
            "value": "apt upgrade -y"
          },
          {
            "type": "packages",
            "value": "python3, python3-pip"
          },
          {
            "type": "command",
            "value": "pip3 --version"
          },
          {
            "type": "packages",
            "value": "python3-dev, libffi-dev, libssl-dev, build-essential"
          },
          {
            "type": "command",
            "value": "curl -L \"https://github.com/docker/compose/releases/download/{{DOCKER.DOCKER_COMPOSE_VERSION}}/docker-compose-$(uname -s)-$(uname -m)\" -o {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "chmod +x {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "docker-compose --version"
          }
        ]
      }
    }
  ]
}