{
  "software": [
    {
      "name": "Docker Compose",
      "version": "1.25.4",
      "installationSteps": {
        "CentOS": [
          {
            "type": "skipCondition",
            "value": "docker-compose --version"
          },
          {
            "type": "packages",
            "value": "epel-release, python38, python38-pip"
          },
          {
            "type": "command",
            "value": "pip3 --version"
          },
          {
            "type": "packages",
            "value": "python38-devel, libffi-devel, openssl-devel, glibc-devel, gcc, gcc-c++, make"
          },
          {
            "type": "command",
            "value": "curl -L \"https://github.com/docker/compose/releases/download/{{DOCKER.DOCKER_COMPOSE_VERSION}}/docker-compose-$(uname -s)-$(uname -m)\" -o {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "chmod +x {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "docker-compose --version"
          }
        ],
        "CentOS_7": [
          {
            "type": "skipCondition",
            "value": "docker-compose --version"
          },
          {
            "type": "packages",
            "value": "epel-release, python3, python3-pip"
          },
          {
            "type": "command",
            "value": "pip3 --version"
          },
          {
            "type": "packages",
            "value": "python3-devel, libffi-devel, openssl-devel, glibc-devel, gcc, gcc-c++, make"
          },
          {
            "type": "command",
            "value": "curl -L \"https://github.com/docker/compose/releases/download/{{DOCKER.DOCKER_COMPOSE_VERSION}}/docker-compose-$(uname -s)-$(uname -m)\" -o {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "chmod +x {{DOCKER.DOCKER_COMPOSE_PATH}}/docker-compose"
          },
          {
            "type": "command",
            "value": "docker-compose --version"
          }
        ]
      }
    }
  ]
}