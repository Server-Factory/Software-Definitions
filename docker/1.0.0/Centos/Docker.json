{
  "software": [
    {
      "name": "Docker",
      "version": "19.03",
      "installationSteps": {
        "CentOS": [
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{SERVER.SERVER_HOME}}/Utils"
          },
          {
            "type": "skipCondition",
            "value": "docker --version"
          },
          {
            "type": "packageGroup",
            "value": "Development Tools"
          },
          {
            "type": "packages",
            "value": "yum-utils, device-mapper-persistent-data, lvm2"
          },
          {
            "type": "command",
            "value": "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo"
          },
          {
            "type": "packagesErase",
            "value": "podman, buildah"
          },
          {
            "type": "packages",
            "value": "docker-ce, docker-ce-cli, containerd.io, telnet"
          },
          {
            "type": "command",
            "value": "setenforce 0"
          },
          {
            "type": "command",
            "value": "systemctl start docker"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          },
          {
            "type": "command",
            "value": "systemctl enable docker"
          },
          {
            "type": "command",
            "value": "systemctl enable firewalld"
          },
          {
            "type": "command",
            "value": "systemctl start firewalld"
          },
          {
            "type": "command",
            "value": "firewall-cmd --permanent --zone=trusted --add-interface=docker0"
          },
          {
            "type": "command",
            "value": "firewall-cmd --reload"
          },
          {
            "type": "reboot",
            "value": "120"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          }
        ]
      }
    }
  ]
}