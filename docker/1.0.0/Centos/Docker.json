{
  "software": [
    {
      "name": "Docker",
      "version": "19.03",
      "installationSteps": {
        "CentOS": [
          {
            "type": "packages",
            "value": "tar, bzip2"
          },
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{SERVER.SERVER_HOME}}/Utils"
          },
          {
            "type": "skipCondition",
            "value": "docker --version"
          },
          {
            "type": "packageGroup",
            "value": "Development Tools"
          },
          {
            "type": "packages",
            "value": "yum-utils, device-mapper-persistent-data, lvm2"
          },
          {
            "type": "command",
            "value": "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.SERVER_HOME}}/Utils/setenforce.sh"
          },
          {
            "type": "packagesErase",
            "value": "podman, buildah, nftables"
          },
          {
            "type": "packages",
            "value": "iptables, iptables-services, docker-ce-3:19.03.0-3.*, docker-ce-cli-1:19.03.0-3.*, containerd.io, telnet"
          },
          {
            "type": "command",
            "value": "systemctl enable iptables"
          },
          {
            "type": "command",
            "value": "systemctl start iptables"
          },
          {
            "type": "command",
            "value": "systemctl start docker"
          },
          {
            "type": "command",
            "value": "docker run --rm hello-world"
          },
          {
            "type": "command",
            "value": "systemctl enable docker"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "command",
            "value": "docker run --rm hello-world"
          }
        ]
      }
    }
  ]
}